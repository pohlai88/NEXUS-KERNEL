{
  "name": "nexus-canon-monorepo",
  "private": true,
  "packageManager": "pnpm@10.23.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "typecheck:strict": "tsc --project tsconfig.strict.json --noEmit",
    "typecheck:portal": "cd apps/portal && pnpm tsc --noEmit",
    "precommit": "pnpm typecheck:portal && pnpm lint",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
